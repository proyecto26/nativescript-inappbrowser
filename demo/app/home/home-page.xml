<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-inappbrowser">
  <StackLayout class="content" verticalAlignment="center">
    <Label text="Welcome InAppBrowser&#xA;for NativeScript" class="t-20 text-center c-black" textWrap="true"/>
    <Label text="Type the url" class="text-center p"/>
    <StackLayout class="input-field">
      <TextField
        text="{{ url }}"
        hint="Url"
        autocorrect="false"
        returnKeyType="done"
        class="input input-border">
      </TextField>
    </StackLayout>
    <Button text="Open link" class="my-button btn" tap="{{ openLink }}"></Button>
    <Button text="Try deep linking" class="my-button btn" tap="{{ tryDeepLinking }}"></Button>
  </StackLayout>
</Page>